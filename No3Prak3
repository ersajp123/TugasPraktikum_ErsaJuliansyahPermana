#include <iostream>
using namespace std;

int main() {
    int pilihan;
    int L, p, l, a, t;

 cout << "Pilihlah bentuk bangun datar: "<<endl;
 cout << "1. Persegi "<<endl;
 cout << "2. Persegi Panjang"<<endl;
 cout << "3. Segitiga "<<endl;
 cout << "Masukkan pilihan (1/2/3): "<<endl;
 cin >> pilihan;

    switch (pilihan) {
        case 1: //rumus luas persegi
            cout << "Masukkan sisi: "; cin >> p;
            luas = p * p;
            cout << "Luas persegi adalah: " << L << endl;
            break;
        case 2: //rumus luas persegi panjang
            cout << "Masukkan panjang persegi panjang: "; cin >> p;
            cout << "Masukkan lebar persegi panjang: "; cin >> l;
            luas = p * l;
            cout << "Luas persegi panjang adalah: " << L << endl;
            break;
        case 3: //rumus luas segitiga
            cout << "Masukkan alas segitiga: "; cin >> a;
            cout << "Masukkan tinggi segitiga: "; cin >> t;
            luas = 0.5 * a * t;
            cout << "Luas segitiga adalah: " << L << endl;
            break;
            
        default:
            cout << "Tidak Tersedia" << endl;
    }

    return 0;
}
